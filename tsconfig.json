{
    "compilerOptions": {
        "target": "ESNext",
        "jsx": "preserve",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "node",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "markdown-it-footnote": [
                "./node_modules/@akiravoid/markdown-it-footnote"
            ],
            "markdown-it-mark": [
                "./node_modules/@akiravoid/markdown-it-mark"
            ]
        },
        "resolveJsonModule": true,
        "types": [
            "vite/client",
            "@vueuse/core",
            "mermaid",
            "vite-plugin-pages/client",
            "katex",
            "vitest/importMeta"
        ],
        "allowJs": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "vite.config.ts",
        "unocss.config.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "markdown-it-highlight-lines"
    ]
}
